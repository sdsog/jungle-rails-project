<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>

<h2>leave review</h2>
  <%= form_for :review, url: "#{@product.id}/reviews" do |f| %>
    <textarea class="form-control" rows="3" <%= f.text_area :description %><br/></textarea>
  <div class="dropdown">
    <%= f.select :rating, [1, 2, 3, 4, 5] %><br/>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-default"<%= f.submit "Submit" %>Submit Review</button>
    </div>
    <br/>
  </div>

  <% end %>

    <div class="reviews">
    <h3 class="page-header"> Reviews: </h3>
    <br/>



 
 <dl class="dl-horizontal">
   <% @reviews.each do |review| %>

  <dt>Name</dt>
  <dd> <%= review.user_id  %> </dd>
  <dt>Rating</dt>
  <dd> <%= review.rating  %> </dd>
  <dt>Created at:</dt>
  <dd> <%= review.created_at %> </dd>
  <dt>Product Review:</dt>
  <dd><%= review.description  %> </dd>
  <br/> 
  <% end %>

 </dl>
    
    </div>
      </div>
    </div>


  </article>

</section>
