<section class="orders-show">
  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>
    <div class="order-summary jumbotron">
      <h4>Thank you for your order <%= current_user.name %>! <br/><br/>
      <% line_items = LineItem.where(order_id: @order.id) %>
      <% line_items.each do |line_item| %>
        <%= render 'item', product_id: line_item.product_id, line_total: line_item.total_price %>
      <% end %>
      <h4>Order total: <%= humanized_money_with_symbol @order.total %></h4> 
      <h4>Email with details sent to: <%= current_user.email %></h4>
      </h4>
      <%= link_to "KEEP SHOPPING!", root_path, class: 'btn btn-lg btn-primary' %>
  </br>
  </div>
  
  </br>
  </br>
</section>